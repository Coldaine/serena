#!/usr/bin/env python3
"""
Serena WSL Bridge Entry Point

This script serves as the main entry point for the WSL Bridge functionality.
It can be used directly or through the package entry point.
"""

import sys
import os

# Add the source directory to Python path if running directly
if __name__ == "__main__":
    script_dir = os.path.dirname(os.path.abspath(__file__))
    src_dir = os.path.join(script_dir, "..", "src")
    sys.path.insert(0, src_dir)

from serena.wsl_bridge.wrapper import main

if __name__ == "__main__":
    main()
